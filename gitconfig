[push]
	default = matching
[core]
	autocrlf = input
	excludesfile = ~/.dotfiles/gitignore_global
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[alias]
	a = add
	aa = add --all
	aliases = !git config --list | grep 'alias.' | sed 's/^alias.//' | sed 's/=/ => /'
	amend = commit --amend
	br = branch
	ci = commit -a
	co = checkout
	graph = log --graph --pretty=format:'%C(yellow)%h%C(reset) -%C(cyan)%d%C(reset) %s %Cgreen(%cr) %C(bold blue)<%an>%C(reset)' --abbrev-commit --date=relative
	last = log -1 HEAD
	lg = log --stat --relative-date
	st = status
	reset = checkout --
	unstage = reset HEAD --
[include]
  path = ~/.dotfiles/gitconfig.local
[apply]
   whitespace = nowarn
[mergetool]
  keepBackup = false
[help]
	autocorrect = 1
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
