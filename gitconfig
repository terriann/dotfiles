[push]
	default = matching
[core]
	autocrlf = input
	excludesfile = ~/.dotfiles/gitignore_global
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[alias]
	a = add
	aliases = !git config --list | grep 'alias.' | sed 's/^alias.//' | sed 's/=/ => /'
	aa = add --all
	br = branch
	ci = commit -a
	co = checkout
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	graph = log --graph --pretty=format:'%C(yellow)%h%C(reset) -%C(cyan)%d%C(reset) %s %Cgreen(%cr) %C(bold blue)<%an>%C(reset)' --abbrev-commit --date=relative
[include]
  path = ~/.dotfiles/gitconfig.local
[apply]
   whitespace = nowarn
[mergetool]
  keepBackup = false
[help]
	autocorrect = 1